{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@rock-band-ng-store": ["libs/app-ng-store/src/index.ts"],
      "@rock-band-cart": ["libs/cart/src/index.ts"],
      "@rock-band-product": ["libs/product/src/index.ts"],
      "@rock-band-rock-ui": ["libs/rock-ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
